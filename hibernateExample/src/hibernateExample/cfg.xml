<?xml version="1.0" encoding="UTF-8"?>
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
	"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
	"-https://www.Hibernate.org/dgd/hibernate-configuration-3.0.dtd">
	
	<hibernate-configuration>
	<session-factory>
	<property name="hibernate.connection.driver_class">con.mysql.jdbc.Driver</property>
	<property name="hibernate.connection.driver.url">jdbc:mysql://localhost:3307/test</property>
	<property name="hibernate.connection.driver.username">root</property>
	<property name="hibernate.connection.driver.password">root</property>
	<property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>
	<property name="show_sql">true</property>
	<property name="hibernate.hb2ddl.auto">update</property>
	<mapping resource="Student.xml"/>
	</session-factory>
	</hibernate-configuration>